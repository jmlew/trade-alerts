{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": [
                  "type:data-access",
                  "type:domain-logic",
                  "type:shell",
                  "type:feature",
                  "type:ui",
                  "type:util",
                  "type:env"
                ]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": [
                  "type:data-access",
                  "type:domain-logic",
                  "type:feature",
                  "type:util",
                  "type:ui"
                ]
              },
              {
                "sourceTag": "type:shell",
                "onlyDependOnLibsWithTags": [
                  "type:shell",
                  "type:data-access",
                  "type:domain-logic",
                  "type:feature",
                  "type:ui"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": [
                  "type:data-access",
                  "type:domain-logic",
                  "type:shell",
                  "type:ui",
                  "type:util"
                ]
              },
              {
                "sourceTag": "type:domain-logic",
                "onlyDependOnLibsWithTags": [
                  "type:domain-logic",
                  "type:data-access",
                  "type:util",
                  "type:env"
                ]
              },
              {
                "sourceTag": "type:data-access",
                "onlyDependOnLibsWithTags": ["type:util", "type:env"]
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": ["type:util"]
              },
              {
                "sourceTag": "domain:shared",
                "onlyDependOnLibsWithTags": ["domain:shared"]
              },
              {
                "sourceTag": "domain:home",
                "onlyDependOnLibsWithTags": ["domain:home", "domain:shared"]
              },
              {
                "sourceTag": "domain:users",
                "onlyDependOnLibsWithTags": ["domain:users", "domain:shared"]
              },
              {
                "sourceTag": "domain:dashboard",
                "onlyDependOnLibsWithTags": ["domain:dashboard", "domain:shared"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
